CREATE OR REPLACE DATABASE BANK;

CREATE OR REPLACE SCHEMA PUBLIC;

CREATE TABLE PERSONS (P_ID INT , FIRST_NAME STRING,LAST_NAME STRING);

SHOW TABLES;

INSERT INTO PERSONS VALUES (101,'MOUNIKA','MALLELA'),
                   (102,'VARSHITHA','MANNEM'),
                   (103,'LAKSHMI','DEVI'),
                   (104,'SRI','VANI');


SELECT * FROM  PERSONS;


CREATE OR REPLACE TRANSIENT DATABASE BANK;

CREATE OR REPLACE TRANSIENT SCHEMA PUBLIC;

CREATE OR REPLACE TRANSIENT TABLE PERSONS_TRANS (P_ID INT , FIRST_NAME STRING,LAST_NAME STRING);

SHOW TABLES;

INSERT INTO PERSONS_TRANS VALUES (101,'MOUNIKA','MALLELA'),
                   (102,'VARSHITHA','MANNEM'),
                   (103,'LAKSHMI','DEVI'),
                   (104,'SRI','VANI');


SELECT * FROM  PERSONS_TRANS;


CREATE OR REPLACE TEMPORARY DATABASE BANK;

CREATE OR REPLACE  TEMPORARY SCHEMA PUBLIC;

// temporary schema and data base cannot be created in snowflake

CREATE TRANSIENT TABLE PERSONS_TEMP (P_ID INT , FIRST_NAME STRING,LAST_NAME STRING);

SHOW TABLES;

INSERT INTO PERSONS_TEMP VALUES (101,'MOUNIKA','MALLELA'),
                   (102,'VARSHITHA','MANNEM'),
                   (103,'LAKSHMI','DEVI'),
                   (104,'SRI','VANI');


SELECT * FROM  PERSONS_TEMP;

//We have a permanent table customer ??
// With the same name can we create trans table ?? --> y/N--Noo
 

CREATE  TABLE CUSTOMERS (ID INT,FIRST_NAME STRING);

CREATE TRANSIENT TABLE CUSTOMERS (ID INT,FIRST_NAME STRING);

SHOW TABLES;




//We have a permanent table customer ??
// With the same name can we temporary table ?? --> y/n--YES

 
 CREATE  TABLE CUSTOMERS (ID INT,FIRST_NAME STRING);

CREATE TEMPORARY  TABLE CUSTOMERS (ID INT,FIRST_NAME STRING);

SHOW TABLES;






CREATE OR REPLACE TRANSIENT TABLE CUSTOMERS (ID INT,FIRST_NAME STRING);

CREATE OR REPLACE TEMPORARY  TABLE CUSTOMERS (ID INT,FIRST_NAME STRING);


INSERT INTO CUSTOMERS VALUES (101,'MOUNIKA'),
                   (102,'VARSHITHA'),
                   (103,'LAKSHMI'),
                   (104,'SRI');


SELECT*FROM CUSTOMERS;

